---

export type Props = {
	type?: 'primary' | 'secondary' | 'accent'
}

const { type = 'primary' } = Astro.props

---

<span class:list={['badge badge-outline mx-0.5 opacity-50 hover:opacity-100', {
	'badge-primary': type === 'primary',
	'badge-secondary': type === 'secondary',
	'badge-accent': type === 'accent',
}]}
>
	<slot />
</span>
